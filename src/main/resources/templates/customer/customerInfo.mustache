{{>layouts/header}}
{{#customer}}
<div style="width: 80%; margin: 0 auto; padding-top: 10px">
    <br>
    <br>

        <h1 style="text-align: center"><strong>{{name}}</strong> 고객님 정보</h1>
        <br>

        <div>
            <strong style="font-size: large;">ID: {{userId}}</strong>
            <button type="button"
                    class="btn btn-sm btn-outline-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#edit-modal"
                    data-bs-id="{{userId}}"
                    data-bs-name="{{name}}"
                    data-bs-phone="{{phone}}">정보 수정</button>
            <a href="/customer/delete/{{userId}}" class="btn btn-sm btn-outline-danger">유저 삭제</a>
        </div>
        <br>
        <p style="font-size: large;">전화번호 : <strong>{{phone}}</strong></p>

    <div>
        <h2>포인트 기록</h2>
        <table class="table">
            <thead>
            <tr>
<!--                private Long RID;-->
<!--                private boolean status;-->
<!--                private Long point;-->
<!--                private Long total_point;-->
<!--                private Customer userId;-->
                <th scope="col">ID</th>
                <th scope="col">포인트</th>
                <th scope="col">총 포인트</th>
            </tr>
            </thead>
            <tbody>
            {{#point}}
            <tr>

                <td>{{RID}}</td>
                <td><p class="{{status}}">{{point}}</p></td>
                <td>{{total_point}}</td>

            </tr>
            {{/point}}
            </tbody>
        </table>
    </div>
</div>


<div class="modal fade" id="edit-modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    댓글 수정</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/customer/edit" method="post">
                    <div class="mb-3">
                        <label for="edit-name" class="form-label">이름</label>
                        <input type="text" class="form-control" id="edit-name" name="name" value="{{name}}">
                    </div>
                    <div class="mb-3">
                        <label for="edit-phone" class="form-label">전화번호</label>
                        <input type="text" class="form-control" id="edit-phone" name="phone" placeholder=" - 없이 010부터 입력 " value="{{phone}}">
                    </div>
                    <input type="hidden" id="edit-id" name="userId" value="{{userId}}">
                    <button type="submit" class="btn btn-primary"
                            id="update-btn">수정 완료</button>
                </form>
            </div>
        </div>
    </div>
</div>

{{/customer}}
{{>layouts/footer}}