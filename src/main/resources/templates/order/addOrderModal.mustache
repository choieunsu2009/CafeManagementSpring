<div class="modal fade" id="addOrderModal" tabindex="-1" aria-labelledby="addOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form action="/orders" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addOrderModalLabel">주문 받기</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="menu" class="form-label">메뉴</label>
                        <select class="form-select" id="menu" name="menuId">
                            {{#menus}}
                            <option value="{{menuId}}">{{menuName}} - {{price}}원</option>
                            {{/menus}}
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">전화번호(꼭 조회버튼을 눌러주세요)</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="phone" name="phone">
                            <button class="btn btn-outline-secondary" type="button" id="lookup-customer">조회</button>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="points" class="form-label">포인트</label>
                        <div class="d-flex align-items-center">
                            <input type="text" class="form-control" id="points" name="points">
                            <div class="form-check form-check-inline ms-3">
                                <input class="form-check-input" type="radio" name="point-action" id="use-points" value="use">
                                <label class="form-check-label" for="use-points">사용</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="point-action" id="earn-points" value="earn" checked>
                                <label class="form-check-label" for="earn-points">적립</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">취소</button>
                    <button type="submit" class="btn btn-primary">등록</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('lookup-customer').addEventListener('click', function() {
        const phone = document.getElementById('phone').value;
        fetch('/points/customer/' + phone)
            .then(response => response.json())
            .then(data => {
                console.log(data.total_point);
                document.getElementById('points').value = data.total_point;
            });
    });
</script>
